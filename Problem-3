#include <iostream>
#include <cstdlib>
#include <cstring>
#include <conio.h>

using namespace std; 

int main()
{
	
	char letters[100];
    int x; 

do {
    cout << "Enter the letters you want to print in reverse : "; cin >> letters;
    
    x = strlen(letters);

} while (x > 100);


for (int i = x; i >= 0; i--)
{
    
	cout << letters[i]; 
    
}
	cout << " \n";
	cout << " \n"; 
	cout << "\nReversed: ";
	cout << "\n==========================================================";
	cout << "\nThe length of the array is: " << x << endl; 
	
	_getch();
	
	return 0;
	
}
